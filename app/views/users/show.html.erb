<h1>User profile</h1>
<h3>email</h3><%= @user.email%>
<h3>name: </h3><%= @user.name%>
<h3>age: </h3> <%= @user.age%>
<h3>weight: </h3> <%= @user.weight%>
<h3>height: </h3> <%= @user.height%>
<h3>goal: </h3> <%= @user.goal%>

<h2>Delete Account</h2>
<%= link_to "Delete", user_path(@user),
data: { confirm: 'Are you sure?'}, :method => :delete%>

<h2>Workouts</h2>
<% @user.workouts.each do |workout| %>
	Name: <%= workout.name%>
	<%= link_to "workout", workout_path(workout) %>
	<%= link_to "Delete", workout_path(workout),
	data: { confirm: 'Are you sure?'}, :method => :delete%>
<% end %>

<h2>Start Workout</h2>

<%= form_for([@user, @user.workouts.build]) do |f| %>
	<%= f.label :name%>
	<%= f.text_field :name%>
	<%= f.submit%>
<%end%>
