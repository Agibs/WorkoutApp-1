<div class="col-md-6 col-offset-3">
	<h1>Update your profile</h1>

	<%= form_for(@user) do |f| %>
			<div>
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>
			
			<div>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>

			<div>
				<%= f.label :age %>
				<%= f.text_field :age %>
			</div>

			<div>
				<%= f.label :height %>
				<%= f.number_field :height %>
			</div>

			<div>
				<%= f.label :weight %>
				<%= f.number_field :weight %>
			</div>

			<div>
				<%= f.label :goal %>
				<%= f.text_field :goal, :size => 150%> 
			</div>

			<div>
				<%= f.label :password %>
				<%= f.password_field :password %> 
			</div>

			<div>
				<%= f.label :password_confirmation %>
				<%= f.password_field :password_confirmation %>
			</div>

			<div>
				<%= f.submit "Update profile" %>
			</div>
	<% end %> 
</div>
