<div class="col-md-4 col-md-offset-4 ">
  <h1>Login</h1>
  <%= form_tag sessions_path do %>
  <div class="field form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], :class => 'form-control', placeholder: "sup@email.com" %>
  </div>
  <div class="field form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'your password' %>
  </div>
  <div class="actions"><%= submit_tag "Log in", class: 'btn btn-success' %></div>
<% end %>

</div>


